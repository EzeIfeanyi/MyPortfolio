<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MVCProjectPractice</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/font-awesome/css/all.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@100;200;300;400;500;600;700;800;900&amp;display=swap" rel="stylesheet" />
    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css" rel="stylesheet" />
    @*<link rel="stylesheet" href="~/MVCProjectPractice.styles.css" asp-append-version="true" />*@
</head>
<body>
        <nav class="navbar navbar-expand-lg navbar-light bg-white py-3">
            <div class="container px-5">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index"><span class="fw-bolder fst-italic" style="font-family: 'Cardo'; color: #333 !important; font-size: 1.5rem;"> < Portfolio /> </span></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0 small fw-bolder">
                        <li class="nav-item"> <a asp-area="" class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="nav-item"> <a asp-area="" class="nav-link" asp-controller="Resume" asp-action="Index">Resume</a></li>
                        <li class="nav-item"> <a asp-area="" class="nav-link" asp-controller="Projects" asp-action="Index">Projects</a></li>
                        <li class="nav-item"><a asp-area="" class="nav-link" asp-controller="Contact" asp-action="Index">Contact</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    <div >
        <main class="flex-shrink-0 pb-3" role="main">
            @RenderBody()
        </main>
        
    </div>

    <footer class="bg-white py-4 mt-auto">
        <div class="container px-5">
            <div class="row justify-content-end align-items-center flex-column flex-sm-row">
                <div class="col-auto"><div class="small m-0">Copyright &copy; Ifeanyi Eze 2023</div></div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
