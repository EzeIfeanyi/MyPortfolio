@{
    ViewData["Title"] = "Home Page";
}
            
<!-- Header-->
<header class="py-5">
    <div class="container px-5 pb-5">
        <div class="row gx-5 align-items-center">
            <div class="col-xxl-5">
                <!-- Header text content-->
                <div class="text-center text-xxl-start">
        <div class="badge bg-gradient-primary-to-secondary text-white mb-4"><div class="text-uppercase">Web & Mobile Development &middot; &middot; ASP.NET Core</div></div>
                    <div class="fs-3 fw-light text-muted italic">Oh, hello, nice to meet you!</div>
                        @*<p class="italic">Oh, hello, nice to meet you!</p>*@
                        <h1 class="display-3 fw-bolder"><span class="text-gradient d-inline">I'm Ifeanyi Eze</span></h1>
                        <h5 class="mt-2 mb-5">
                            I <span class="type-writer text-gradient d-inline" data-wait="1000"
                                    data-words='["Am A Software Engineer","Create", "Design", "Provide Solutions with tech"]'></span>
                        </h5>
                    @*<h1 class="display-3 fw-bolder mb-5"><span class="text-gradient d-inline">Get online and grow fast</span></h1>*@
                    <div class="d-grid gap-3 d-sm-flex justify-content-sm-center justify-content-xxl-start mb-3">
                        <a asp-area="" class="btn btn-primary btn-lg px-5 py-3 me-sm-3 fs-6 fw-bolder" asp-controller="Resume" asp-action="Index">Resume</a>
                        <a asp-area="" class="btn btn-outline-dark btn-lg px-5 py-3 fs-6 fw-bolder" asp-controller="Projects" asp-action="Index">Projects</a>
                    </div>
                </div>
            </div>
            <div class="col-xxl-7">
                <!-- Header profile picture-->
                <div class="d-flex justify-content-center mt-5 mt-xxl-0">
                    <div class="profile bg-gradient-primary-to-secondary">
                        <!-- TIP: For best results, use a photo with a transparent background like the demo example below-->
                        <!-- Watch a tutorial on how to do this on YouTube (link)-->
                        <img class="profile-img" src="assets/profile.png" alt="..." />
                        @for (int dot = 1; dot <= 4; dot++)
                        {
                            <div class="dots-@dot">
                                <partial name="_PartialDotDesign" />
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</header>
<!-- About Section-->
<section class="bg-light py-5">
    <div class="container px-5">
        <div class="row gx-5 justify-content-center">
            <div class="col-xxl-10">
                <div class="text-center my-5">
                    <h2 class="display-5 fw-bolder"><span class="text-gradient d-inline">About Me</span></h2>
                    <p class="text-muted">
                        I consider myself a diligent and friendly individual with strong communication skills, and I am genuinely passionate about coding, implementing innovative concepts, and staying updated with new technologies. Moreover, I take pride in being a team player, working harmoniously in groups as well as independently to achieve our shared objectives.
                    </p>
                    <div class="d-flex justify-content-center fs-2 gap-4">
                        <a class="text-gradient" href="https://www.linkedin.com/in/ifeanyieze8899/"><i class="bi bi-linkedin"></i></a>
                        <a class="text-gradient" href="https://github.com/EzeIfeanyi"><i class="bi bi-github"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

